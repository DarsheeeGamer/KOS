CC = gcc
CFLAGS = -Wall -Wextra -fPIC -O2 -std=c99 -D_GNU_SOURCE -D_POSIX_C_SOURCE=200809L
LDFLAGS = -shared -lpthread -lrt
TARGET = libkos_ipc.so
SOURCES = pipe.c shm.c msgqueue.c sem.c signal.c ipc_utils.c
OBJECTS = $(SOURCES:.c=.o)

all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) $(OBJECTS) -o $@ $(LDFLAGS)

%.o: %.c ipc.h
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJECTS) $(TARGET)

.PHONY: all clean